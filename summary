<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart Summary</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: center; }
    th { background-color: #f2f2f2; }
    input { width: 60px; text-align: center; }
    button { padding: 8px 12px; margin-top: 10px; cursor: pointer; }
  </style>
</head>
<body>
  <h2>Cart Summary (สำหรับแอดมิน)</h2>
  <table id="cartTable">
    <thead>
      <tr>
        <th>สินค้า</th>
        <th>ราคา</th>
        <th>จำนวน</th>
        <th>ส่วนลด</th>
        <th>ราคาสุทธิ</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
  <p>รวมทั้งหมด: <span id="totalPrice">0</span> บาท</p>
  <button id="sendBackBtn">ส่ง Flex กลับ LINE</button>

  <script>
    // รับข้อมูล cart ผ่าน URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const cartData = JSON.parse(decodeURIComponent(urlParams.get('cart') || '[]'));

    const cartTableBody = document.querySelector('#cartTable tbody');
    const totalPriceEl = document.getElementById('totalPrice');

    function renderCart() {
      cartTableBody.innerHTML = '';
      let total = 0;
      cartData.forEach((item, index) => {
        const discount = item.discount || 0;
        const netPrice = (item.price - discount) * item.qty;
        total += netPrice;

        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${item.name}</td>
          <td>${item.price}</td>
          <td>${item.qty}</td>
          <td><input type="number" min="0" value="${discount}" data-index="${index}" class="discountInput"></td>
          <td>${netPrice}</td>
        `;
        cartTableBody.appendChild(row);
      });
      totalPriceEl.textContent = total;
    }

    // อัปเดตส่วนลดแบบ real-time
    cartTableBody.addEventListener('input', (e) => {
      if(e.target.classList.contains('discountInput')){
        const idx = e.target.dataset.index;
        cartData[idx].discount = Number(e.target.value) || 0;
        renderCart();
      }
    });

    renderCart();

    document.getElementById('sendBackBtn').addEventListener('click', async () => {
      const totalPrice = cartData.reduce((sum, i) => sum + (i.price - (i.discount||0)) * i.qty, 0);

      const flexMsg = {
        type: "flex",
        altText: "รายละเอียดคำสั่งซื้อ (แก้ไขส่วนลดแล้ว)",
        contents: {
          type: "bubble",
          body: {
            type: "box",
            layout: "vertical",
            contents: cartData.map(item => ({
              type: "box",
              layout: "horizontal",
              contents: [
                { type: "text", text: `${item.name} x${item.qty}`, flex: 0 },
                { type: "text", text: `${(item.price - (item.discount||0)) * item.qty}฿`, align: "end" }
              ]
            })).concat([{
              type: "box",
              layout: "horizontal",
              contents: [
                { type: "text", text: "รวมทั้งหมด", weight: "bold" },
                { type: "text", text: `${totalPrice}฿`, align: "end", weight: "bold" }
              ]
            }])
          }
        }
      };

      try {
        await liff.sendMessages([flexMsg]);
        alert("ส่ง Flex กลับ LINE เรียบร้อยแล้ว!");
      } catch(err) {
        console.error(err);
        alert("ส่ง Flex ไม่สำเร็จ");
      }
    });

    // LIFF init
    window.onload = function() {
      liff.init({ liffId: "2007887429-p3nd4dvE" }).then(() => {
        console.log("LIFF initialized");
      });
    };
  </script>
  <script src="https://static.line-scdn.net/liff/edge/2.22/sdk.js"></script>
</body>
</html>
